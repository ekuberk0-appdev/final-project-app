<div>
  <div>
    <h1>
       <%= @the_service_provider.name %> details
    </h1>

    <div>
      <div>
        <a href="/service_providers">
          Go back
        </a>
      </div>


    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_service_provider.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_service_provider.address %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
        <%= @the_service_provider.neighborhoods.pluck(:name).to_sentence %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
          <img src="<%= @the_service_provider.image %>">
      </dd>

      <dt>
        Availability
      </dt>
      <dd>
        <%= @the_service_provider.availability %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_service_provider.email %>
      </dd>

      <dt>
        Phone
      </dt>
      <dd>
        <%= @the_service_provider.phone %>
      </dd>

      <dt>
        Service locations count
      </dt>
      <dd>
        <%= @the_service_provider.service_locations_count %>
      </dd>

      <dt>
        Offerings count
      </dt>
      <dd>
        <%= @the_service_provider.offerings_count %>
      </dd>

      <dt>
        Reviews count
      </dt>
      <dd>
        <%= @the_service_provider.reviews_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_service_provider.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_service_provider.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


