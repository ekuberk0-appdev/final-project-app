<div>
  <div>
    <h1>
      Service #<%= @the_service.id %> details
    </h1>

    <div>
      <div>
        <a href="/services">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_service/<%= @the_service.id %>">
          Delete service
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_service.name %>
      </dd>

      <dt>
        Offerings count
      </dt>
      <dd>
        <%= @the_service.offerings_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_service.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_service.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit service
    </h2>

    <form action="/modify_service/<%= @the_service.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_service.name %>">
      </div>

      <div>
        <label for="offerings_count_box">
          Offerings count
        </label>

        <input type="text" id="offerings_count_box" name="query_offerings_count" value="<%= @the_service.offerings_count %>">
      </div>

      <button>
        Update service
      </button>
    </form>
  </div>
</div>

<hr>
