<div>
  <div>
    <h1>
      Favorite #<%= @the_favorite.id %> details
    </h1>

    <div>
      <div>
        <a href="/favorites">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_favorite/<%= @the_favorite.id %>">
          Delete favorite
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_favorite.user_id %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_favorite.notes %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_favorite.image %>
      </dd>

      <dt>
        Offering
      </dt>
      <dd>
        <%= @the_favorite.offering_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_favorite.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_favorite.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit favorite
    </h2>

    <form action="/modify_favorite/<%= @the_favorite.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_favorite.user_id %>">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes"><%= @the_favorite.notes %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_favorite.image %>">
      </div>

      <div>
        <label for="offering_id_box">
          Offering
        </label>

        <input type="text" id="offering_id_box" name="query_offering_id" value="<%= @the_favorite.offering_id %>">
      </div>

      <button>
        Update favorite
      </button>
    </form>
  </div>
</div>

<hr>
