<div>
  <div>
    <h1>
      List of all offerings
    </h1>
  </div>
</div>

<hr>


<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Service
        </th>

        <th>
          Service provider
        </th>
        <th>
          Availability
        </th>

        <th>
          Favorites count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_offerings.each do |an_offering| %>
      <tr>
        <td>
          <%= an_offering.id %>
        </td>

        <td>
          <%= an_offering.service.name %>
        </td>

        <td>
          <%= an_offering.service_provider.name %>
        </td>
<td> 
<%= an_offering.availability %>
</td>
        <td>
          <%= an_offering.favorites_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_offering.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_offering.updated_at) %> ago
        </td>

        <td>
          <a href="/offerings/<%= an_offering.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
